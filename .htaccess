# Enable CORS for forgot_password_staff.php
<IfModule mod_headers.c>
    <FilesMatch "forgot_password_staff\.php">
        SetEnvIf Origin "^https?://(www\.)?cnergy\.site$" AccessControlAllowOrigin=$0
        Header always set Access-Control-Allow-Origin %{AccessControlAllowOrigin}e env=AccessControlAllowOrigin
        Header always set Access-Control-Allow-Methods "POST, OPTIONS, GET"
        Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, Accept, Origin"
        Header always set Access-Control-Allow-Credentials "false"
        Header always set Access-Control-Max-Age "86400"
    </FilesMatch>
</IfModule>

